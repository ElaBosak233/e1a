#header-post-mobile
  position: fixed
  top: 2rem
  right: 0
  display: inline-block
  float: right
  z-index: 100

  a
    background: none
    color: inherit
    text-decoration: none

  a.icon
    background: none

    &:hover
      color: $color-link
  
  #home-icon
    float: right
    margin-right: 2rem
    margin-left: 15px

    &:hover
      color: $color-accent-1

@media screen and (min-width: 500px)
  #header-post-mobile
    display: none