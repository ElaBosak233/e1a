#archive
  .post-year
    list-style-type: none
    #post-year-value
      no-select()
      position: relative
      display: block
      margin-top: 2rem
      margin-bottom: .5rem
      margin-left: 1.5rem
      color: $color-accent-2
      text-transform: none
      letter-spacing: normal
      font-weight: bold
      font-size: 1.5rem

  .post-list
    padding: 0

    .post-item
      margin-bottom: 1rem
      margin-left: 0
      list-style-type: none

      .meta
        display: block
        margin-right: 16px
        min-width: 100px
        color: $color-meta
        font-size: 14px

  @media (min-width: 480px)
    .post-list
      .post-item
        display: flex
        margin-bottom: 5px
        margin-left: 1rem

        .meta
          text-align: left
